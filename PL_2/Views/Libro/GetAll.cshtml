@{
}

@model ML.Libro

<div class="btn btn-outline-primary" style="margin-bottom: 1rem;">
    @Html.ActionLink("Agregar Nuevo Libro", "Form", "Libro", FormMethod.Post, new{ enctype="multipart/form-data"})
</div>


<table class="table table-responsive table-success">
    <thead>
        <tr>
            <th></th>
            <th>IdLibro</th>
            <th>Titulo</th>
            <th>Autor</th>
            <th>Isbn</th>
            <th>Fecha Publicacion</th>
            <th></th>
        </tr>

    </thead>
    <tbody>
        @foreach (ML.Libro libro in Model.Libros)
        {
            <tr>
                <td><a class="btn btn-success" href="@Url.ActionLink("Form","Libro", new{IdLibro = libro.IdLibro})">Editar</a></td>
                <td>@libro.IdLibro</td>
                <td>@libro.Titulo</td>
                <td>@libro.Autor</td>

                <td>@libro.Isbn</td>
                <td>@libro.FechaPublicacion</td>
                <td><a class="btn btn-danger" href="@Url.Action("Form","Libro",  new{IdLibro = libro.IdLibro})">Eliminar</a></td>

            </tr>
        }
    </tbody>
</table>
